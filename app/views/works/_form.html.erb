<%= simple_form_for(@work, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
    <%= f.label params[:service_name], class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%#= f.text_field :service_name, value: params[:service_name], class: 'form-control', disabled: true %>
      <%= f.hidden_field :service_name, value: params[:service_name], class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= f.label params[:tag_name], class: 'col-sm-2 control-label' %>
    <%=  %>
    <div class="col-sm-10">
      <%#= f.text_field :service_work, value: params[:tag_name], class: 'form-control', disabled: true %>
      <%= f.hidden_field :service_work, value: params[:tag_name], class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :car_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select :car_id, @user_cars, :id, :make, { prompt: true }, { class: 'form-control' } %>
    </div>
  </div>



  <div class="form-group">
    <%= f.label :next_appointment, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <% default_date = 1.year.from_now %>
      <%= f.datetime_select :next_appointment, { default: default_date, min: Time.now }, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
