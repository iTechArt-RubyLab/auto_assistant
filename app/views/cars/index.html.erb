<h1>All Cars</h1>
<%#= @am_im_signed %>
<%= @my_email %>

<table>
  <thead>
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>Year</th>
    <th>User</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @cars.each do |car| %>
    <tr>
      <td><%= car.make %></td>
      <td><%= car.model %></td>
      <td><%= car.year %></td>
      <td><%= car.user.email %></td>
      <td>
        <%= link_to 'Show', car_path(car) %>
        <%= link_to 'Edit', edit_car_path(car) %>
        <%= link_to 'Delete', car_path(car), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Car', new_car_path %>
